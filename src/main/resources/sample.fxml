<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import com.fengxue.MyTextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<VBox fx:id="vboxs" xmlns="http://javafx.com/javafx/1.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fengxue.NoteUI">
      <children>
         <HBox fx:id="hboxs" spacing="5" VBox.vgrow="NEVER">
               <ListView fx:id="listview" prefHeight="30.0" HBox.hgrow="ALWAYS" orientation="HORIZONTAL"/>
               <Button fx:id="addbt" onAction="#onAddLabelClicked" prefWidth="30" />
         </HBox>
         <MyTextArea fx:id="textarea" VBox.vgrow="ALWAYS" wrapText="true"  />
         <Label fx:id="lastSaveLabel" text="上次保存时间：未保存" VBox.vgrow="NEVER"/>
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
</VBox>
