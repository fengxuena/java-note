<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import com.fengxue.MyTextArea?>


<VBox fx:id="vboxs"
      xmlns="http://javafx.com/javafx/1.8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fengxue.NoteUI"
      >
   <children>
      <ListView fx:id="listvw" orientation="HORIZONTAL" prefHeight="30.0" prefWidth="-Infinity" maxHeight="30.0" />
      <MyTextArea fx:id="textvw" VBox.vgrow="ALWAYS" wrapText="true"  />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
